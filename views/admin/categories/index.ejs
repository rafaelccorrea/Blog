<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a href="/admin/categorias/new" class="btn btn-success">Nova Categoria</a>
    <hr>

    <table class="table table-bordered">
        <thead>

            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>

        </thead>

        <tbody>

            <% categories.forEach(category => { %>

                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title%></th>
                    <th><%= category.slug %></th>
                    <th>
                        <form action="/categoria/delete" method="POST" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                            <input type="hidden" name="id" value=" <%= category.id %> ">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                            <a href="/admin/categorias/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
                    </th>
                </tr>

            <% }) %>

        </tbody>
    </table>

</div> 

<%- include ('../../partials/footer.ejs') %>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        let decision = confirm("Deseja Deletar?")

        if(decision){
            form.submit();
            console.log("Deletada")
        }else{
            console.log("Não deletada!")
        }
    }
</script>